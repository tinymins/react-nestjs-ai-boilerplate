{
  "name": "apps",
  "private": true,
  "packageManager": "pnpm@10.15.1",
  "scripts": {
    "dev": "concurrently \"pnpm -C packages/i18n dev\" \"pnpm -C packages/types dev\" \"pnpm -C packages/server dev\" \"pnpm -C packages/web dev\"",
    "dev:web": "pnpm -C packages/web dev",
    "dev:server": "pnpm -C packages/server dev",
    "build": "pnpm -C packages/server build && pnpm -C packages/web build",
    "lint": "biome check . && pnpm -r --no-bail typecheck",
    "format": "biome format . --write",
    "typecheck": "pnpm -r --no-bail typecheck",
    "db:up": "docker compose up -d",
    "db:down": "docker compose down",
    "db:migrate": "pnpm -C packages/server db:migrate"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "concurrently": "^9.2.1"
  }
}
